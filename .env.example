# FFmpeg Test Video Configuration
# Resolution of the test video
VIDEO_WIDTH=1280
VIDEO_HEIGHT=720

# Framerate (frames per second)
FRAMERATE=25

# Video bitrate (e.g., 2000k, 4000k, 8000k)
BITRATE=2000k

# SRT Server Configuration
# URL of the SRT server to send the stream to
# Examples:
#   srt://localhost:9000
#   srt://192.168.1.100:9000
#   srt://host.docker.internal:9000 (to reach host machine from Docker)
SRT_URL=srt://host.docker.internal:9000

# Use SRT parameters in URL (true/false)
# Set to 'false' to use bare URL without any query parameters
# Set to 'true' to include mode, latency, encryption, etc. as query parameters
USE_SRT_PARAMS=true

# SRT connection mode: caller, listener, or rendezvous
# Leave empty to omit from URI (will only be added if explicitly set)
# Only used if USE_SRT_PARAMS=true
SRT_MODE=

# SRT latency in milliseconds (e.g., 125, 200, 500)
# Higher values provide more buffer for network jitter
# Leave empty to omit from URI (will only be added if explicitly set)
# Only used if USE_SRT_PARAMS=true
SRT_LATENCY=

# Optional: Stream ID for SRT routing/identification
# Leave empty if not needed
# Only used if USE_SRT_PARAMS=true
SRT_STREAMID=

# Encryption Configuration
# Enable SRT encryption (true/false)
# Only used if USE_SRT_PARAMS=true
ENABLE_ENCRYPTION=false

# Passphrase for encryption (required if ENABLE_ENCRYPTION=true)
# Must be between 10-79 characters
# Only used if USE_SRT_PARAMS=true
SRT_PASSPHRASE=

# Encryption key length in bytes: 16, 24, or 32
# 16 = AES-128, 24 = AES-192, 32 = AES-256
# Leave empty to omit from URI (will only be added if explicitly set)
# Only used if USE_SRT_PARAMS=true and ENABLE_ENCRYPTION=true
SRT_PBKEYLEN=
